@model SAT.DATA.EF.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h2>Student Details</h2>

<div class="col-lg-6 ui-sortable" style="color:black">
    <div class="box ui-sortable-handle">
        <header>
            <h5>@Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model => model.FirstName)</h5>
                <div class="toolbar">
                    <div class="btn-group">
                        <a href="#defaultTable" data-toggle="collapse" class="btn btn-sm btn-default minimize-box">
                            <i class="fa fa-angle-up"></i></a>
                        <a class="btn btn-danger btn-sm close-box">
                            <i class="fa fa-times"></i></a>
                    </div>
                </div>
        </header>

    <div id="defaultTable" class="body collapse in">
        <table class="table responsive-table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Major</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Status</th>

                </tr>
        </thead>

        <tbody>
                    <tr>
                    <td>@Html.DisplayFor(model => model.FirstName)</td>
                    <td>@Html.DisplayFor(model => model.LastName)</td>
                    <td>@Html.DisplayFor(model => model.Major)</td>
                    <td>@Html.DisplayFor(model => model.Address)</td>
                    <td>@Html.DisplayFor(model => model.City)</td>
                    <td>@Html.DisplayFor(model => model.State)</td>
                    <td>@Html.DisplayFor(model => model.ZipCode)</td>
                    <td>@Html.DisplayFor(model => model.Phone)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                    <td>@Html.DisplayNameFor(model => model.Ss)</td>
        </tbody>
        </table>
        </div>
    </div>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
